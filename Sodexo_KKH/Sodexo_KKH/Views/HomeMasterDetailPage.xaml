<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
                  xmlns:local="clr-namespace:Sodexo_KKH.Views"
                  prism:ViewModelLocator.AutowireViewModel="True"
                  x:Class="Sodexo_KKH.Views.HomeMasterDetailPage"
                  MasterBehavior="Popover"
                  xmlns:lEx="clr-namespace:Sodexo_KKH.Converters"
                  xmlns:syncfusion="clr-namespace:Syncfusion.SfBusyIndicator.XForms;assembly=Syncfusion.SfBusyIndicator.XForms"
                  Title="&#x200B;"
                  xmlns:staticfn="clr-namespace:Sodexo_KKH.Helpers"
                  >
    
    
    <MasterDetailPage.Master>
        <ContentPage Title=" ">
          
                <StackLayout >

                <FlexLayout AlignItems="Start" Direction="Row"
                    Wrap="Wrap"
                    BackgroundColor="#1e90ff"
                    JustifyContent="SpaceBetween">
                    <Image Margin="0,10,0,0" WidthRequest="100"  HeightRequest="100" HorizontalOptions="Start" Source="Assets/defaultprofile.png" FlexLayout.Basis="100%"/>

                    <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Margin="10,0" FlexLayout.Basis="100%">
                        <StackLayout HorizontalOptions="FillAndExpand">
                            <Label VerticalOptions="Center" HorizontalOptions="FillAndExpand"
                   TextColor="White">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Welcome,"/>
                                        <Span Text=" "/>
                                        <Span Text="{Binding User,Mode=OneWay}" FontAttributes="Bold" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>

                            <Label  Text="{Binding UserRole}" TextColor="White"  FontAttributes="Bold" HorizontalOptions="FillAndExpand" />
                            <Label Text="{Binding UserSiteCode}" TextColor="White"  FontAttributes="Bold" HorizontalOptions="FillAndExpand"  />
                        </StackLayout>
                        <Label Text="{Binding Source={x:Static staticfn:Library.ServerName}}" HorizontalOptions="EndAndExpand" 
                       VerticalOptions="EndAndExpand"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="Center"
                               FontAttributes="Bold"
                       FontSize="Medium"
                       HeightRequest="50"
                       WidthRequest="50"
                       Margin="10"
                       BackgroundColor="#ffffba"/>

                    </StackLayout>


                    <BoxView Margin="0,10,0,0" HeightRequest="1" BackgroundColor="#E8E8E8" FlexLayout.Basis="100%"/>
                </FlexLayout>

                <ScrollView >




                    <StackLayout>
                        <StackLayout>
                            <StackLayout Orientation="Horizontal" Margin="10" VerticalOptions="Center">
                                <StackLayout.GestureRecognizers >
                                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"   CommandParameter="Patient_Search"  NumberOfTapsRequired="1"/>
                                </StackLayout.GestureRecognizers>
                                <Image WidthRequest="25" HeightRequest="25" Source="Assets/patient_search.png"/>
                                <Label  Margin="0,0,0,0" VerticalTextAlignment="Center" 
                                        Text="{lEx:Translate patsearch}" TextColor="Black"  HorizontalOptions="Start"   FontAttributes="Bold" />
                            </StackLayout>

                            <BoxView Color="Black" WidthRequest ="100" HeightRequest="1"/>
                        </StackLayout>
                        <StackLayout>
                            <StackLayout Orientation="Horizontal" Margin="10" VerticalOptions="Center">
                                <StackLayout.GestureRecognizers >
                                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" CommandParameter="Patient" NumberOfTapsRequired="1"/>
                                </StackLayout.GestureRecognizers>
                                <Image WidthRequest="25" HeightRequest="25" Source="Assets/sync.png"/>
                                <Label  Margin="0,0,0,0" VerticalTextAlignment="Center" Text="Sync Patient Data" 
                                        TextColor="Black"  HorizontalOptions="Start"   FontAttributes="Bold" />
                            </StackLayout>

                            <BoxView Color="Black" WidthRequest ="100" HeightRequest="1"/>
                        </StackLayout>
                        <StackLayout>
                            <StackLayout Orientation="Horizontal" Margin="10" VerticalOptions="Center">
                                <StackLayout.GestureRecognizers >
                                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" CommandParameter="Master" NumberOfTapsRequired="1"/>
                                </StackLayout.GestureRecognizers>
                                <Image WidthRequest="25" HeightRequest="25" Source="Assets/sync.png"/>
                                <Label  Margin="0,0,0,0" LineBreakMode="WordWrap" 
                                        VerticalTextAlignment="Center" Text="Sync All Master Data" 
                                        TextColor="Black"  HorizontalOptions="Start"   FontAttributes="Bold" />
                                <Label x:Name="mastervis"   IsVisible="{Binding IsMasterAvailable}" Margin="10,0,0,0"  
                                       VerticalTextAlignment="Center"   
                                       LineBreakMode="WordWrap" 
                                       VerticalOptions="Center" Text="{lEx:Translate txtDataText}" TextColor="Black"  
                                       HorizontalOptions="End"  FontSize="12" FontAttributes="Bold" 
                                       HeightRequest="31" WidthRequest="60" />

                            </StackLayout>
                            <BoxView Color="Black" WidthRequest ="100" HeightRequest="1"/>
                        </StackLayout>

                        <StackLayout>
                            <StackLayout Orientation="Horizontal" Margin="10" VerticalOptions="Center">
                                <StackLayout.GestureRecognizers >
                                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" CommandParameter="Menu"  NumberOfTapsRequired="1"/>
                                </StackLayout.GestureRecognizers>
                                <Image WidthRequest="25" HeightRequest="25" Source="Assets/sync.png"/>
                                <Label  Margin="0,0,0,0" VerticalTextAlignment="Center" 
                                        Text="Sync Menu Master" TextColor="Black"  
                                        HorizontalOptions="Start"   FontAttributes="Bold" />
                                <Label x:Name="menuvis" IsVisible="{Binding IsMenuAvailable}"  Margin="60,0,0,0" VerticalTextAlignment="Center"   LineBreakMode="WordWrap" VerticalOptions="Center" Text="{lEx:Translate txtDataText}" TextColor="#2a295c"  HorizontalOptions="Start"  FontSize="12" FontAttributes="Bold" HeightRequest="31" WidthRequest="60" />

                            </StackLayout>
                            <BoxView Color="Black" WidthRequest ="100" HeightRequest="1"/>
                        </StackLayout>
                        <StackLayout>
                            <StackLayout Orientation="Horizontal" Margin="10" VerticalOptions="Center">
                                <StackLayout.GestureRecognizers >
                                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" CommandParameter="Offline"  NumberOfTapsRequired="1"/>
                                </StackLayout.GestureRecognizers>
                                <Image WidthRequest="25" HeightRequest="25" Source="Assets/sync.png"/>
                                <Label Margin="0,0,0,0" VerticalTextAlignment="Center" Text="{lEx:Translate syncoffText}" TextColor="Black"  HorizontalOptions="Start"  FontAttributes="Bold" />
                                <Button  x:Name="txtofflinecount" BorderColor="Transparent"   BackgroundColor="Red"
                               Text="{Binding OrderCount}"
                               TextColor="White"
                               FontSize="Micro"
                               BorderWidth="1"
                               BorderRadius="15"
                            WidthRequest="40"
                            HeightRequest="30">
                                    <Button.Triggers>
                                        <DataTrigger TargetType="Button"
                                                     Binding="{Binding OrderCount}"
                                                     Value="0">
                                            <Setter Property="IsVisible" Value="False"/>
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>

                                <!--<Label  IsVisible="True"  Margin="60,0,0,0" VerticalTextAlignment="Center"   LineBreakMode="WordWrap" VerticalOptions="Center" Text="{lEx:Translate txtDataText}" TextColor="#2a295c"  HorizontalOptions="Start"  FontSize="12" FontAttributes="Bold" HeightRequest="31" WidthRequest="60" />-->

                            </StackLayout>
                            <BoxView Color="Black" WidthRequest ="100" HeightRequest="1"/>
                        </StackLayout>
                        <StackLayout>
                            <StackLayout Orientation="Horizontal" Margin="10" VerticalOptions="Center">
                                <StackLayout.GestureRecognizers >
                                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" CommandParameter="Order"   NumberOfTapsRequired="1"/>
                                </StackLayout.GestureRecognizers>
                                <Image WidthRequest="25" HeightRequest="25" Source="Assets/order_details.png"/>
                                <Label  Margin="0,0,0,0" VerticalTextAlignment="Center"
                                        Text="{lEx:Translate porderdText}" TextColor="Black"  HorizontalOptions="Start"  FontAttributes="Bold" />
                                <Label  IsVisible="False"  Margin="60,0,0,0" VerticalTextAlignment="Center"   LineBreakMode="WordWrap" VerticalOptions="Center" Text="{lEx:Translate txtDataText}" TextColor="#2a295c"  HorizontalOptions="Start"  FontSize="12" FontAttributes="Bold" HeightRequest="31" WidthRequest="60" />

                            </StackLayout>
                            <BoxView Color="Black" WidthRequest ="100" HeightRequest="1"/>
                        </StackLayout>
                        <!--Meal Order Status done by Srishti-->
                        <StackLayout>
                            <StackLayout Orientation="Horizontal" Margin="10" VerticalOptions="Center">
                                <StackLayout.GestureRecognizers >
                                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" CommandParameter="OrderStatus"  NumberOfTapsRequired="1"/>
                                </StackLayout.GestureRecognizers>
                                <Image WidthRequest="15" HeightRequest="15" Source="setting.png"/>
                                <Label  Margin="0,0,0,0" VerticalTextAlignment="Center" 
                                        Text="{lEx:Translate orderstatusText}" TextColor="Black"  HorizontalOptions="Start"   FontAttributes="Bold" />
                                <Label  IsVisible="False"  Margin="60,0,0,0" VerticalTextAlignment="Center"   LineBreakMode="WordWrap" VerticalOptions="Center" Text="{lEx:Translate txtDataText}" TextColor="#2a295c"  HorizontalOptions="Start"  FontSize="12" FontAttributes="Bold" HeightRequest="31" WidthRequest="60" />

                            </StackLayout>
                            <BoxView Color="Black" WidthRequest ="100" HeightRequest="1"/>
                        </StackLayout>
                        <!--End of Meal Order Status-->
                        <StackLayout>
                            <StackLayout Orientation="Horizontal" Margin="10" VerticalOptions="Center">
                                <StackLayout.GestureRecognizers >
                                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" CommandParameter="Feed" NumberOfTapsRequired="1"/>
                                </StackLayout.GestureRecognizers>
                                <Image WidthRequest="15" HeightRequest="15" Source="setting.png"/>
                                <Label  Margin="0,0,0,0" VerticalTextAlignment="Center" 
                                        Text="{lEx:Translate feedText}" TextColor="Black"  HorizontalOptions="Start"  FontAttributes="Bold" />
                                <Label  IsVisible="False"  Margin="60,0,0,0" VerticalTextAlignment="Center"   LineBreakMode="WordWrap" VerticalOptions="Center" Text="{lEx:Translate txtDataText}" TextColor="#2a295c"  HorizontalOptions="Start"  FontSize="12" FontAttributes="Bold" HeightRequest="31" WidthRequest="60" />

                            </StackLayout>
                            <BoxView Color="Black" WidthRequest ="100" HeightRequest="1"/>
                        </StackLayout>

                        <StackLayout>
                            <StackLayout Orientation="Horizontal" Margin="10" VerticalOptions="Center">
                                <StackLayout.GestureRecognizers >
                                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" CommandParameter="LogOut"  NumberOfTapsRequired="1"/>
                                </StackLayout.GestureRecognizers>
                                <Image WidthRequest="25" HeightRequest="25" Source="Assets/patient_logout.png"/>
                                <Label  Margin="0,0,0,0" VerticalTextAlignment="Center" Text="{lEx:Translate txtlogText}"
                                        TextColor="Black"  HorizontalOptions="Start"   FontAttributes="Bold" />
                                <Label  IsVisible="False"  Margin="60,0,0,0" VerticalTextAlignment="Center"   LineBreakMode="WordWrap" VerticalOptions="Center" Text="{lEx:Translate txtlogText}" TextColor="#2a295c"  HorizontalOptions="Start"  FontSize="12" FontAttributes="Bold" HeightRequest="31" WidthRequest="60" />

                            </StackLayout>
                            <BoxView Color="Black" WidthRequest ="100" HeightRequest="1"/>
                        </StackLayout>
                        
                        <StackLayout>
                            <StackLayout Orientation="Horizontal" Margin="10" VerticalOptions="Center">
                               
                                <Image WidthRequest="25" HeightRequest="25" Source="Assets/patient_logout.png"/>
                                <Label  Margin="0,0,0,0" VerticalTextAlignment="Center" Text="App Version 5.3" 
                                        TextColor="Black"  HorizontalOptions="Start"   FontAttributes="Bold" />
                                <Label  IsVisible="False"  Margin="60,0,0,0" VerticalTextAlignment="Center"   LineBreakMode="WordWrap" VerticalOptions="Center" 
                                        Text="5.2" TextColor="#2a295c"  HorizontalOptions="Start"  FontSize="12" FontAttributes="Bold" HeightRequest="31" WidthRequest="60" />

                            </StackLayout>
                            <BoxView Color="Black" WidthRequest ="100" HeightRequest="1"/>
                        </StackLayout>
                    </StackLayout>
                </ScrollView>
            </StackLayout>
                
            
        </ContentPage>
    </MasterDetailPage.Master>
    
    <MasterDetailPage.Detail >
        <NavigationPage>
            <x:Arguments>
               
                    <local:PatientSearchPage  />

                    

                
            </x:Arguments>
        </NavigationPage>
    </MasterDetailPage.Detail>
    
</MasterDetailPage>