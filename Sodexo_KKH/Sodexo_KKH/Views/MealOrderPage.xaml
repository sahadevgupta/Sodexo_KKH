                                    <Label  HorizontalTextAlignment="Center" LineBreakMode="WordWrap" HorizontalOptions="Center" Text="{Binding meal_item_name}" FontSize="Small"/>
                                </StackLayout>

                            </DataTemplate>
                        </SyncListView:SfListView.ItemTemplate>

                        <SyncListView:SfListView.SelectedItemTemplate>
