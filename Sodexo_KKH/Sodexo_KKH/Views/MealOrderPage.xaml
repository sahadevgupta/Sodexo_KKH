                                    </Frame>
                                    <Label  HorizontalTextAlignment="Center" LineBreakMode="WordWrap" HorizontalOptions="Center" FontAttributes="Bold" Text="{Binding meal_item_name}" FontSize="Small"/>
                                </StackLayout>
                            </DataTemplate>
                        </SyncListView:SfListView.SelectedItemTemplate>

