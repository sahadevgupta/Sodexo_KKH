<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sodexo_KKH.Controls.FloatingEntry"
             x:Name="this">
  <ContentView.Content>
        

        <Grid ColumnSpacing="16" Margin="0,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1"/>
            </Grid.RowDefinitions>
            <Button IsVisible="False"/>
            <Label x:Name="HiddenLabel"  IsVisible="False" FontSize="Subtitle" Margin="0"/>
            <Entry x:Name="EntryField" Text="{Binding Text, Mode=TwoWay}" FontSize="Medium" Margin="0,12,0,0"/>
        </Grid>

    </ContentView.Content>
</ContentView>